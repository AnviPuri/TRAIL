<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anvipuri.trail.Activity2"
    tools:targetApi="m">


    <Spinner
        android:id="@+id/spinnerto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whereto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/whereto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home"
        android:layout_marginTop="112dp"
        android:text="@string/where_would_you_wish_to_go"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="gotohome"
        android:text="@string/home"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <Button
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home"
        android:layout_alignBottom="@+id/home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="gotoinfo"
        android:text="@string/next2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

</android.widget.RelativeLayout>
